{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jira-clone/add-issue": ["libs/issue/feature/add-issue/src/index.ts"],
      "@jira-clone/auth": ["libs/auth/src/index.ts"],
      "@jira-clone/auth-guard": ["libs/core/guards/auth-guard/src/index.ts"],
      "@jira-clone/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@jira-clone/client-data-access": [
        "libs/client/data-access/src/index.ts"
      ],
      "@jira-clone/config": ["libs/core/config/src/index.ts"],
      "@jira-clone/home": ["libs/home/feature/home/src/index.ts"],
      "@jira-clone/home-data-access": ["libs/home/data-access/src/index.ts"],
      "@jira-clone/home/create-project": [
        "libs/home/feature/create-project/src/index.ts"
      ],
      "@jira-clone/http-client": ["libs/core/http-client/src/index.ts"],
      "@jira-clone/interface": ["libs/core/interface/src/index.ts"],
      "@jira-clone/issue-data-access": [
        "libs/issue/data-access/data-access/src/index.ts"
      ],
      "@jira-clone/issue-detail": [
        "libs/issue/feature/issue-detail/src/index.ts"
      ],
      "@jira-clone/kanban-board": [
        "libs/project/feature/kanban-board/src/index.ts"
      ],
      "@jira-clone/project-data-access": [
        "libs/project/data-access/src/index.ts"
      ],
      "@jira-clone/shell": ["libs/client/shell/src/index.ts"],
      "@jira-clone/svg-icon": ["libs/ui/components/svg-icon/src/index.ts"],
      "@jira-clone/token-interceptor": [
        "libs/core/token-interceptor/src/index.ts"
      ],
      "@jira-clone/util": ["libs/core/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
